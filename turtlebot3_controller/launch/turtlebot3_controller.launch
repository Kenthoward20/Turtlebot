<?xml version="1.0"?>
<launch>

  <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>
  <arg name="open_rviz" default="true"/>
  <arg name="move_forward_only" default="false"/>
  
  <!-- INSTRUCTION: fill in the path to your saved map -->
  <arg name="map_file" default="$(find turtlebot3_controller)/<......>/<......>.yaml"/>

  <!-- INSTRUCTION: launch the TurtleBot Gazebo world.
       HINT: "re-use" the launch file that launches the Gazebo world here -->
  <include file="$(find <......>)/<......>/<.............>.launch"/>
  
  <!-- Map server -->
  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/>

  <!-- INSTRUCTION: launch AMCL using the correct launch file -->
  <include file="$(find turtlebot3_navigation)/<......>/<......>.launch">
    <arg name="initial_pose_x" value="0.5"/>
    <arg name="initial_pose_y" value="0.5"/>
    <arg name="initial_pose_a" value="1.57079632679"/>
  </include>

  <!-- INSTRUCTION: launch move_base using the correct launch file -->
  <include file="$(find turtlebot3_navigation)/<......>/<......>.launch">
    <arg name="model" value="$(arg model)" />
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
  </include>

  <!-- rviz -->
  <group if="$(arg open_rviz)"> 
    <!-- INSTRUCTION: launch rviz for visualization.
         HINT: rviz was also launched when performing SLAM with gmapping. -->
    <......replace_this......>
  </group>
  
</launch>